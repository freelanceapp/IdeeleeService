<resources>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:drawableLeft">@drawable/fb</item>
        <item name="android:background">@drawable/round_corner_box</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_marginLeft">@dimen/big_margin</item>
        <item name="android:layout_marginRight">@dimen/big_margin</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
</resources>
