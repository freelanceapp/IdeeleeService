<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".stores.StoreDetails">

    <include layout="@layout/toolbar_child" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="@dimen/margin_8dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentLeft="true"
            android:fontFamily="@font/regular"
            android:text="Add New Store"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17sp"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/regular"
            android:text="Change Location"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17sp"
         />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/regular"
            android:text="Store Name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/med_padding"
            android:background="@drawable/round_corner_ed_graystroke"
            android:fontFamily="@font/regular"
            android:layout_marginTop="@dimen/margin_8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:padding="@dimen/margin_10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/regular"
            android:text="Brief Info"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/med_padding"
            android:background="@drawable/round_corner_ed_graystroke"
            android:fontFamily="@font/regular"
            android:layout_marginTop="@dimen/margin_8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:padding="@dimen/margin_10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/regular"
            android:text="Service Type"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17sp"
            />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Food Deliver"
            android:textColorHint="@color/black"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
            android:layout_marginRight="@dimen/med_padding"
            android:background="@drawable/round_corner_ed_graystroke"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:padding="@dimen/margin_10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/regular"
            android:text="Store Banner"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17sp"
            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:background="@drawable/round_corner_ed_graystroke"
                android:layout_height="120dp" />
        </RelativeLayout>
        <Button
            android:id="@+id/ux_btn_continue_otpPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_button"
            android:text="Add New"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:textAllCaps="false"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/btn_margin"
            android:paddingRight="@dimen/btn_margin"
            android:textSize="@dimen/text_size_17sp" />
    </LinearLayout>
</LinearLayout>

    </ScrollView>
</LinearLayout>