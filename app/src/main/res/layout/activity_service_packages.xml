<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".servicepackages.ServicePackages">
<include layout="@layout/toolbar_child"/>
<TextView
    android:layout_width="match_parent"
    android:textColor="@color/black"
    android:padding="@dimen/margin_8dp"
    android:fontFamily="@font/semibold"
    android:textSize="@dimen/text_size_15sp"
    android:text="@string/select_a_package_to_start_the_service"
    android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_servicepackage"
        android:layout_width="match_parent"
        android:background="@color/light_bg_blue"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_4dp"

        android:layout_height="match_parent" />
</LinearLayout>