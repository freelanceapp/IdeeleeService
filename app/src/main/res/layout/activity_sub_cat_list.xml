<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".servicesnew.SubCatList">

    <include
        android:id="@+id/topbar"
        layout="@layout/toolbar_child" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/subcatlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addservice"
        android:layout_below="@+id/topbar" />


    <Button
        android:id="@+id/addservice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_58dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_58dp"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:background="@drawable/round_corner_colorprimary"
        android:fontFamily="@font/regular"
        android:text="Add Services"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_19sp" />
</RelativeLayout>