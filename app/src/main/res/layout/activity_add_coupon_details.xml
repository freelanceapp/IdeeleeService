<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg_blue"
    android:orientation="vertical"
    tools:context=".coupons.AddCouponDetails">

    <include
        android:id="@+id/top"
        layout="@layout/toolbar_child" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/med_padding">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_corner_ed_graystroke"
                android:hint="@string/main_text"
                android:padding="@dimen/small_padding" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/med_padding"
                android:orientation="horizontal"
                android:weightSum="10">

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/med_padding"
                    android:layout_weight="3.5"
                    android:background="@drawable/round_corner_ed_graystroke"
                     android:fontFamily="@font/semibold"
                    android:gravity="center"
                     android:inputType="number"
                    android:padding="@dimen/small_padding"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/med_padding"
                    android:layout_weight="2.5"
                    android:background="@drawable/round_corner_ed_graystroke"
                    android:drawableRight="@drawable/per"
                    android:fontFamily="@font/semibold"
                    android:gravity="center"
                    android:hint=""
                    android:inputType="number"
                    android:padding="@dimen/small_padding"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text" />



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/round_corner_ed_graystroke"
                    android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                    android:drawableTint="@color/gray"
                    android:fontFamily="@font/semibold"
                    android:gravity="center"
                    android:padding="@dimen/small_padding"
                    android:text="Off"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/med_padding"
                android:background="@drawable/round_corner_ed_graystroke"
                android:drawableRight="@drawable/ic_arrow_drop_down_black_24dp"
                android:drawableTint="@color/gray"
                android:gravity="center_vertical"
                android:padding="@dimen/small_padding"
                android:text="Valid Till" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/med_padding"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/extra_small"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/p_one" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/extra_small"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/p_two" />
            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/med_padding"
                android:background="@drawable/round_corner_ed_graystroke"
                android:fontFamily="@font/regular"
                android:gravity="top"
                android:hint="@string/terms_condition_"
                android:minLines="5"
                android:padding="@dimen/small_padding" />

            <Button
                android:id="@+id/ux_btn_continue_loginPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/big_margin"
                android:layout_marginTop="@dimen/margin_24dp"
                android:layout_marginRight="@dimen/big_margin"
                android:layout_marginBottom="@dimen/small_padding"
                android:background="@drawable/round_corner_button"
                android:text="Add Coupon"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_17sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>