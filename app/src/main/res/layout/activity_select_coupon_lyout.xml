<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_bg_blue"
    android:orientation="vertical"
    tools:context=".coupons.SelectCouponLyout">

    <include
        android:id="@+id/top"
        layout="@layout/toolbar_child" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btm"
        android:layout_below="@+id/top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fontFamily="@font/regular"
                android:padding="@dimen/small_padding"
                android:text="Select a coupon layout"
                android:textColor="@color/black" />


            <LinearLayout
                android:layout_width="match_parent"
                android:onClick="handleBannerClick"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_padding"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/banner_one" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/arrow_y"
                    android:drawablePadding="@dimen/small_padding"
                    android:fontFamily="@font/semibold"
                    android:padding="@dimen/small_padding"
                    android:text="@string/proceed_now"
                    android:textColor="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:onClick="handleBannerClick"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_padding"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/banner_two" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/arrow_y"
                    android:drawablePadding="@dimen/small_padding"
                    android:fontFamily="@font/semibold"
                    android:padding="@dimen/small_padding"
                    android:text="@string/proceed_now"
                    android:textColor="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:onClick="handleBannerClick"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_padding"
                android:background="@color/white"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/banner_three" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/arrow_y"
                    android:drawablePadding="@dimen/small_padding"
                    android:fontFamily="@font/semibold"
                    android:padding="@dimen/small_padding"
                    android:text="@string/proceed_now"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/btm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/small_padding"
        android:layout_marginRight="@dimen/small_padding"
        android:background="@color/light_bg_blue"
        android:orientation="vertical"
        android:padding="@dimen/med_padding">

        <TextView
            android:id="@+id/btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/round_corner_colorprimary"
            android:fontFamily="@font/semibold"
            android:paddingLeft="@dimen/med_padding"
            android:paddingTop="@dimen/small_padding"
            android:paddingRight="@dimen/med_padding"
            android:paddingBottom="@dimen/small_padding"
            android:text="@string/already_have_a_banner_layout"
            android:textColor="@color/white"
            android:textSize="@dimen/normal_text"

            />
    </LinearLayout>
</RelativeLayout>