<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/extra_small"
    android:layout_marginBottom="@dimen/small_padding"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/extra_small">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".15"
            android:adjustViewBounds="true"
            android:src="@drawable/adidas" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".85"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_padding"
                android:paddingTop="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9"
                    android:fontFamily="@font/semibold"
                    android:includeFontPadding="false"
                    android:paddingRight="@dimen/extra_small"
                    android:text="@string/buy_a_voucher_get_upto"
                    android:textColor="@color/black"
                    android:textSize="@dimen/normal_text" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight=".1"
                    android:thumbTint="@color/colorPrimaryDark" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/small_padding"
                android:paddingRight="@dimen/small_padding"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:fontFamily="@font/semibold"
                    android:text="@string/_25_off"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/normal_text" />

                <LinearLayout
                    android:layout_width="@dimen/margin_20dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/extra_small"
                    android:layout_weight="0.35"
                    android:id="@+id/edit"
                    android:gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/edit_"
                        android:drawablePadding="@dimen/small_padding"
                        android:fontFamily="@font/semibold"
                        android:gravity="right"
                        android:text="@string/edit"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/normal_text" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/margin_20dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/extra_small"
                    android:layout_weight="0.35"
                    android:gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/cross_"
                        android:drawablePadding="@dimen/small_padding"
                        android:fontFamily="@font/semibold"
                        android:gravity="right"
                        android:text="@string/remove"
                        android:textColor="@color/red"
                        android:textSize="@dimen/normal_text" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>