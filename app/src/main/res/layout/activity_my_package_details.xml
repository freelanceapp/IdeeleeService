<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".servicepackages.MyPackageDetails">
    <include layout="@layout/toolbar_child"/>
    <LinearLayout
        android:layout_width="match_parent"
android:gravity="center"

        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp"
        android:background="@drawable/round_corner_edittext"
        android:orientation="vertical"
      android:padding="@dimen/margin_30dp">


            <TextView

                android:id="@+id/servicetype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/bold"
                android:padding="@dimen/margin_4dp"
                android:text="@string/monthly"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_23sp" />





                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:buttonTint="@color/orange"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:textSize="@dimen/text_size_13sp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/orange"
                    android:text="2 On Demand Services"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/orange"
                    android:layout_marginTop="@dimen/margin_10dp"
                    android:text="1 Delivery Service"
                    android:textSize="@dimen/text_size_13sp"
                    android:backgroundTint="@color/orange"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/checkBox" />


        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/regular"
            android:padding="@dimen/margin_4dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:text="Valid Till 25 May 2019"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_19sp" />
            <TextView
                android:id="@+id/ux_txt_ratenow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="bottom"
                android:layout_alignParentRight="true"
android:layout_marginTop="@dimen/margin_10dp"
                android:fontFamily="@font/regular"
                android:text="$150.00 Paid"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_27sp"
                android:textStyle="bold" />



<Button
    android:layout_width="wrap_content"
    android:text="Update Package"
    android:layout_marginTop="@dimen/margin_30dp"
    android:textAllCaps="false"
    android:textSize="@dimen/text_size_19sp"
    android:paddingRight="@dimen/btn_margin"
    android:paddingLeft="@dimen/btn_margin"

    android:background="@drawable/round_edittext_blueborder"
    android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>