<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".stores.StoreDetails">

    <include layout="@layout/toolbar_child" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingTop="@dimen/med_padding"
        android:paddingStart="@dimen/med_padding"
        android:paddingEnd="@dimen/med_padding"
        android:paddingBottom="@dimen/small_padding"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/regular"
            android:text="@string/add_new_store"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_15sp"
          />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/regular"
            android:text="@string/change_location"
            android:gravity="center_vertical"
            android:drawableStart="@drawable/location"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/margin_4dp"
            android:textSize="@dimen/text_size_15sp"
         />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/small_padding"
      android:paddingStart="@dimen/margin_30dp"
        android:paddingEnd="@dimen/margin_30dp"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/regular"
            android:text="Store Name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/round_corner_ed_graystroke"
            android:fontFamily="@font/regular"
            android:layout_marginTop="@dimen/margin_8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:padding="@dimen/margin_10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/regular"
            android:text="Brief Info"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17sp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/round_corner_ed_graystroke"
            android:fontFamily="@font/regular"
            android:layout_marginTop="@dimen/margin_8dp"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:padding="@dimen/margin_10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/regular"
            android:text="Service Type"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17sp"
            />



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Food Deliver"
            android:textColorHint="@color/black"
            android:layout_marginTop="@dimen/margin_8dp"
            android:layout_gravity="center_vertical"
            android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
            android:background="@drawable/round_corner_ed_graystroke"
            android:fontFamily="@font/regular"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:padding="@dimen/margin_10dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/regular"
            android:text="Store Banner"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17sp"
            />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
              android:src="@drawable/square"
                android:layout_height="120dp" />
        </RelativeLayout>
        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round_corner_button"
            android:text="Add"
            android:layout_gravity="center"

            android:layout_marginTop="@dimen/margin_20dp"
            android:textAllCaps="false"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:textColor="@color/white"
            android:paddingStart="@dimen/btn_margin"
            android:paddingEnd="@dimen/btn_margin"
            android:textSize="@dimen/text_size_17sp" />
    </LinearLayout>
</LinearLayout>

    </ScrollView>
</LinearLayout>