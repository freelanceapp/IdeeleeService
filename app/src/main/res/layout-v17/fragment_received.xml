<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".payments.received.fragment.ReceivedFragment">

  <LinearLayout
      android:layout_width="match_parent"
      android:orientation="horizontal"
      android:weightSum="3"
      android:padding="@dimen/margin_12dp"
      android:id="@+id/linearlayout"
      android:layout_height="wrap_content">
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/regular"
          android:text="Order Id"
          android:textAlignment="center"
          android:layout_weight="1"
          android:textColor="@color/black"
          android:textSize="@dimen/text_size_17sp" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/regular"
          android:text="Date"
          android:layout_weight="1"
          android:textAlignment="center"
          android:textColor="@color/black"
          android:textSize="@dimen/text_size_17sp" />
      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:fontFamily="@font/regular"
          android:text="Amount"
          android:textAlignment="center"
          android:layout_weight="1"
          android:textColor="@color/black"
          android:textSize="@dimen/text_size_17sp" />

  </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/linearlayout"
        android:layout_height="match_parent">


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_received"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_above="@+id/linear"
android:layout_alignParentTop="true"
        android:orientation="horizontal" />
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear"
        android:layout_margin="@dimen/margin_20dp"
        android:background="@drawable/round_corner_edittext"
        android:padding="@dimen/margin_14dp"
        android:layout_alignParentBottom="true"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/bold"
            android:text="Total Amount"
            android:textAlignment="center"
android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_17sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:gravity="end"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/ux_txt_ratenow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="bottom"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/margin_10dp"
            android:fontFamily="@font/regular"
            android:text="$1500.00 Paid"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_19sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/regular"
            android:text="Withdrawl Now"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_13sp" />
    </LinearLayout>
    </LinearLayout>
    </RelativeLayout>

</RelativeLayout>