<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightbgblue"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_4dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/margin_4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/regular"
                android:padding="@dimen/margin_4dp"
                android:text="APR 22, 2018 02:22PM"

                android:textSize="@dimen/text_size_13sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:gravity="end">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:padding="@dimen/margin_4dp"
                    android:text="Payment:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_13sp" />

                <TextView
                    android:id="@+id/payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:padding="@dimen/margin_4dp"
                    android:text="Cash"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:padding="@dimen/margin_4dp"
                android:text="PLUMBER -FOR 2 HOURS"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_15sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/round_corner_colorprimary"
                android:fontFamily="@font/regular"
                android:paddingStart="@dimen/margin_10dp"
                android:paddingTop="@dimen/margin_4dp"
                android:paddingEnd="@dimen/margin_10dp"
                android:paddingBottom="@dimen/margin_4dp"
                android:text="08-10 AM"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_13sp" />
        </RelativeLayout>

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:fontFamily="@font/regular"-->
        <!--android:padding="@dimen/margin_4dp"-->
        <!--android:text=" JACK HARRY"-->
        <!--android:textColor="@color/black"-->
        <!--android:textSize="@dimen/text_size_15sp"-->
        <!--/>-->
        <TextView

            android:id="@+id/ordersummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/margin_4dp"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:padding="@dimen/margin_4dp"
            android:text="American Burger X1, American Burger X2"
            android:textSize="@dimen/text_size_15sp"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/im"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/margin_4dp"
                android:src="@drawable/ic_brightness_1_black_24dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/im"
                android:orientation="vertical"
                android:paddingStart="@dimen/margin_4dp">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:gravity="center"

                    android:text="Job Location"
                    android:textSize="@dimen/text_size_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:padding="@dimen/margin_4dp"
                    android:text="District 2 1323 Riverside Drive Redding"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15sp" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:padding="@dimen/margin_4dp"
                    android:text="530-225-3426"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true">

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/regular"
                    android:gravity="start"
                    android:padding="@dimen/margin_4dp"
                    android:text="Order ID :"

                    android:textSize="@dimen/text_size_15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/regular"
                    android:gravity="start"
                    android:padding="@dimen/margin_4dp"
                    android:text="TS15458"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <TextView
                    android:id="@+id/txt_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/regular"
                    android:gravity="start"
                    android:padding="@dimen/margin_4dp"
                    android:text="By:"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_15sp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/regular"
                    android:gravity="start"
                    android:padding="@dimen/margin_4dp"
                    android:text="Jack Harry"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_15sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearlayout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_10dp"
            android:weightSum="3">

            <TextView
                android:id="@+id/txt_callnow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/margin_10dp"
                 android:layout_weight="1"
                android:background="@drawable/round_edittext_blueborder"
                android:drawableStart="@drawable/call_"
                android:drawableLeft="@drawable/call_"
                android:drawablePadding="@dimen/margin_4dp"
                android:fontFamily="@font/regular"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_8dp"
                 android:paddingStart="@dimen/margin_8dp"
                android:text="Call Now"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/small_txt" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/margin_10dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_green_solid"
                android:fontFamily="@font/regular"
                android:gravity="center"
                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding"
                android:text="Accept Job"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/small_txt" />

            <TextView
                android:id="@+id/ux_btn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/round_corner_red_solid"
                android:fontFamily="@font/regular"
                android:gravity="center"
                android:paddingTop="@dimen/small_padding"
                android:paddingBottom="@dimen/small_padding"
                android:text="Reject"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/small_txt" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>